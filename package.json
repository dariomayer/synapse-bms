{
  "name": "synapse-bms",
  "private": true,
  "version": "0.1.0",
  "description": "Synapse Building Cloud monorepo",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=9.0.0"
  },
  "scripts": {
    "dev": "pnpm -r --parallel dev",
    "build": "pnpm -r build",
    "start": "pnpm -r start",
    "db:generate": "pnpm --filter @synapse-bms/backend drizzle:generate",
    "db:migrate": "pnpm --filter @synapse-bms/backend drizzle:migrate",
    "db:sync": "pnpm run db:generate && pnpm run db:migrate",
    "mcp:manual": "pnpm dlx @better-auth/cli mcp --manual",
    "mcp:open-code": "pnpm dlx @better-auth/cli mcp --open-code",
    "mcp:shadcn": "pnpm dlx shadcn@latest mcp",
    "git:auto": "bash ./scripts/git_auto.sh"
  }
}
