# backend/.env.example
# Server
PORT=4000
HOST=0.0.0.0
NODE_ENV=development
APP_NAME=synapse-bms-backend

# External PostgreSQL connection
POSTGRES_HOST=your-db-host
POSTGRES_PORT=5432
POSTGRES_USER=your-db-user
POSTGRES_PASSWORD=your-db-password
POSTGRES_DB=your-db-name
# Set to true if your provider requires SSL (e.g., cloud DBs)
POSTGRES_SSL=false

# DB session timeouts (milliseconds)
# Query max time (default 60s)
DB_STATEMENT_TIMEOUT_MS=60000
# Timeout per session inattiva in transazione (default 120s)
DB_IDLE_IN_TX_TIMEOUT_MS=120000
# Timeout attesa lock (default 5s)
DB_LOCK_TIMEOUT_MS=5000
