{
  "name": "@synapse-bms/backend",
  "version": "0.1.0",
  "private": true,
  "description": "Synapse BMS backend API",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/index.js",
    "drizzle:generate": "drizzle-kit generate --config=drizzle.config.ts",
    "drizzle:migrate": "drizzle-kit migrate --config=drizzle.config.ts",
    "drizzle:studio": "drizzle-kit studio --config=drizzle.config.ts"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "drizzle-orm": "^0.33.0",
    "pg": "^8.12.0",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.12.12",
    "@types/pg": "^8.15.5",
    "@types/ws": "^8.5.10",
    "drizzle-kit": "^0.24.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.6.3"
  }
}
